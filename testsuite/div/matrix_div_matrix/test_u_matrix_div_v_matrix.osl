shader
test_u_matrix_div_v_matrix (output color Cout = 0)
{
    matrix m1 = matrix(raytype("camera"),0,0,0,
                       0,2*raytype("camera"),0,0,
                       0,0,3*raytype("camera"),0,
                       0,0,0,1);
              
    matrix divisor = matrix(
        1+u,0,0,0,
        0,2+v,0,0,
        0,0,6,0,
        0,0,0,1);
              
    matrix rm = m1/divisor;
    Cout = color(rm[0][0],rm[1][1],rm[2][2]);
}

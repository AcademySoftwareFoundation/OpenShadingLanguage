shader
test_u_matrix_mul_u_matrix (output color Cout = 0)
{
    matrix m1 = matrix(raytype("camera"),0,0,0,
                       0,2*raytype("camera"),0,0,
                       0,0,3*raytype("camera"),0,
                       0,0,0,1);

    matrix m2 = matrix(0.5,0,0,0,
                       0,0.5,0,0,
                       0,0,0.5,0,
                       0,0,0,1);
              
    matrix rm = m1*m2;
    Cout = color(rm[0][0],rm[1][1],rm[2][2]);
}

shader continue_in_uniform_then_exit_in_varying_then_in_uniform_loop_in_varying_then(output float c = 0.0)
{
    if (P[0] > 0.5) {
        for(int i = 0 ; i < 10; ++i)
        {
            c+= 0.1;
            if (i > 5) {
                continue;
            }
            if (c > P[1]) {
                exit();
            }
        }
        c *= 2.0;
    }
}

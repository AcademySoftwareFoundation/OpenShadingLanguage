#include "mx_types.h"


shader
SHADER_NAME(mx_geomcolor)
    [[ string help = "The color associated with the current geometry " ]]
  (
    output TYPE out = TYPE_DEFAULT_OUT
  )
{
    TYPE attr;
    getattribute("color", attr);
    out = attr;
}

#include "mx_funcs.h"

shader mx_exponent_float_TYPE_SUFFIX
    [[ string help = TYPE_STR" Raise incoming float/color/vector values to the in2 exponent value/stream" ]]
  (
    TYPE in1 = TYPE_DEFAULT_IN,
    float in2 = 1.0,
    output TYPE out = TYPE_DEFAULT_OUT
  )
{
    out = pow(in1, in2);
}

#include "mx_funcs.h"

shader mx_absval_TYPE_SUFFIX
    [[ string help = "The per-channel absolute value of the incoming float/color/vector." ]]
  (
    TYPE in = TYPE_DEFAULT_IN,
    output TYPE out = TYPE_DEFAULT_OUT
  )
{
    out = abs(in);
}

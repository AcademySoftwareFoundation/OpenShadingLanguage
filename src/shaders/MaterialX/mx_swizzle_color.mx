#include "mx_funcs.h"


shader mx_swizzle_color_TYPE_SUFFIX
    [[ string help = "Perform an arbitrary permutation of the channels of the input stream" ]]
  (
    color in = 0,
    string channels = "rgb",
    output TYPE out = TYPE_ZERO
  )
{
    float inF[4];

    inF[0] = in[0];
    inF[1] = in[1];
    inF[2] = in[2];
    
    out = swizzle_TYPE(inF, channels);
}


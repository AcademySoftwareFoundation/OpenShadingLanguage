    a.i = multiplier;
    printf ("a.i = %d\n", a.i);
    printf ("\n");
}



void Btest (B b, int multiplier)
{
    printf ("passing a ref to a B:\n");
    b.a.i = multiplier;
    printf ("b.a.i = %d\n", b.a.i);
    printf ("\n");
}



void Ctest (C c, int multiplier)
{
    printf ("passing a ref to a C:\n");
    for (int i = 0;  i < 5;  ++i)
        c.bs[i].a.i = i*multiplier;
    for (int i = 0;  i < 5;  ++i)
        printf ("c.bs[%d].a.i = %d\n", i, c.bs[i].a.i);
    printf ("\n");
}



